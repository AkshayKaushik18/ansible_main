server {
        listen       80;
        listen  [::]:80;

        root   /usr/share/nginx/html;
        index  index.html index.htm;

        server_name {{ api_endpoint }};

        location / {
                proxy_pass http://{{ local_ipv4_address }}:4200;
                #client_max_body_size 2G;
                #try_files $uri $uri/ =404;
        }
        location /api {
                proxy_pass http://{{ local_ipv4_address }}:8000;
                #client_max_body_size 2G;
                #try_files $uri $uri/ =404;
        }

}
